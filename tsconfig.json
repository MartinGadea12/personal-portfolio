{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": true
  },
  "include": ["app", "remix.env.d.ts", "types/**/*", "app/vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
